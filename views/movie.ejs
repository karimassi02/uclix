<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Movies</title>
    <style>
        .movie-container {
            display: flex;
            flex-wrap: wrap;
        }
        .movie-card {
            border: 1px solid #333;
            padding: 10px;
            margin: 10px;
            flex: 0 0 calc(33.33% - 20px);
        }
        .movie-card h2 {
            margin: 0;
        }
        .movie-card img {
            width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="movie-container">
        <% movie.forEach(movie => { %>
            <div class="movie-card">
                <h2><%= movie.name %></h2>
                <a href="/movie-details/<%= movie._id %>">
                    <img src="<%= movie.image %>" alt="<%= movie.name %>">
                </a>
            </div>
        <% }); %>
    </div>
</body>
</html>