<!DOCTYPE html>
<html>
<head>
  <title>Top 10 Movies</title>
  <style>
    .films {
      display: flex;
      flex-wrap: wrap;
    }
    .card-container {
      position: relative;
      width: 200px;
      margin: 10px;
    }
    .top10 {
      background-color: #fff;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      border-radius: 5px;
      overflow: hidden;
      text-align: center;
    }
    .top10 img {
      width: 100%;
      height: 300px;
      object-fit: cover;
    }
    .top10 h1 {
      font-size: 28px;
      margin: 0;
      padding: 10px 0;
    }
    .top10 p {
      color: #666;
      font-size: 32px;
      margin: 0;
      padding: 10px 0;
      background-color: #f0f0f0;
    }
    .ranking {
      color: rgba(255, 255, 255, 0.7);
      font-size: 44px;
      font-weight: bold;
      text-align: center;
      padding: 10px 0;
    }
  </style>
</head>
<body>
  <div class="films">
    <% movies.sort((a, b) => b.avgRating - a.avgRating).forEach(function(movie, index) { %>
      <div class="card-container">
        <div class="top10">
          <img src="<%= movie.imageUrl %>" alt="<%= movie.name %>">
          <h1><%= movie.name %></h1>
          <p><%= movie.avgRating.toFixed(2) %></p>
        </div>
        <div class="ranking"><%= index + 1 %></div>
      </div>
    <% }); %>
  </div>
</body>
</html>