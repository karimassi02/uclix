<!-- Link to go back to the dashboard -->
<a href="/dashboard">&larr; Back</a>

<div class="admin-title">
    <h2>Edit Movie</h2>

    <!-- Form to delete the movie -->
    <form action="/delete-movie/<%= movie._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn-delete btn">
    </form>
</div>

<!-- Form to edit the movie -->
<form action="/edit-movie/<%= movie._id %>?_method=PUT" method="POST">
    <!-- Input field for the movie's title -->
    <label for="name"><b>Movie Title</b></label>
    <input type="text" placeholder="Enter Movie Title" name="name" value="<%= movie.name %>">

    <!-- Input field for the movie's date -->
    <label for="date"><b>Release Date</b></label>
    <input type="date" name="date" value="<%= movie.date %>">

    <!-- Input field for the movie's language -->
    <label for="language"><b>Language</b></label>
    <input type="text" placeholder="Enter Language" name="language" value="<%= movie.language %>">

    <!-- Input field for the movie's duration -->
    <label for="duration"><b>Duration</b></label>
    <input type="text" placeholder="Enter Duration" name="duration" value="<%= movie.duration %>">

    <!-- Input field for the movie's studio -->
    <label for="studio"><b>Studio</b></label>
    <input type="text" placeholder="Enter Studio" name="studio" value="<%= movie.studio %>">

    <!-- Input field for the movie's category -->
    <label for="category"><b>Category</b></label>
    <input type="text" placeholder="Enter Category" name="category" value="<%= movie.category %>">

    <!-- Input field for the movie's tag -->
    <label for="tag"><b>Tag</b></label>
    <input type="text" placeholder="Enter Tag" name="tag" value="<%= movie.tag %>">

    <!-- Input field for the movie's image -->
    <label for="image"><b>Image URL</b></label>
    <input type="text" placeholder="Enter Image URL" name="image" value="<%= movie.image %>">

    <!-- Submit button to update the movie -->
    <input type="submit" value="Update Movie" class="btn">
</form>