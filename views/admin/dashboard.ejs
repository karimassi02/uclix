<div class="admin-title">
  <h2>Movies</h2>
  <a href="/add-movie" class="button">+ Add New</a>
</div>

<ul class="admin-posts">
  <% data.forEach(movie => { %>
  <li>
    <a href="/movie/<%= movie._id %>"> <%= movie.name %> &nearr; </a>
    <div class="admin-post-controls">
      <a href="/edit-movie/<%= movie._id %>" class="btn">Edit</a>
      <form
        action="/delete-movie/<%= movie._id %>?_method=DELETE"
        method="POST"
      >
        <input type="submit" value="Delete" class="btn-delete btn" />
      </form>
    </div>
  </li>
  <% }) %>
</ul>

<div class="people-title">
  <h2>People</h2>
  <a href="/add-people" class="button">+ Add New</a>
</div>

<ul class="people-posts">
  <% datapeople.forEach(people => { %>
  <li>
    <a href="/people/<%= people._id %>">
      <%= people.firstname %> <%= people.familyname %> &nearr;
    </a>
    <div class="people-post-controls">
      <a href="/edit-people/<%= people._id %>" class="btn">Edit</a>
      <form
        action="/delete-people/<%= people._id %>?_method=DELETE"
        method="POST"
      >
        <input type="submit" value="Delete" class="btn-delete btn" />
      </form>
    </div>
  </li>
  <% }) %>
</ul>
